<!DOCTYPE html>
<html>
    <head>
        <title>Register Here </title>
    </head>
    <body>
      <form method="post" >
        <fieldset>
          <legend>Add Customer</legend>
          <div>
            <label for="UserName">Name:</label>
            <input type="text" name="UserName" value="" />
          </div>
          <div>
            <label for="Email">Email : </label>
            <input type="email" name="Email" value="" />
          </div>
          <div>
            <label for="Address">Address:</label>
            <input type="text" name="Address" value="" />
          </div>
          <div>
            <label for="Contact">Contact:</label>
            <input type="number" name="Contact" value="" />
          </div>
          <div>
            <label for="Password">Password:</label>
            <input type="password" name="Password" value="" />
          </div>
          <div>
            <label for="HintQue">Hint Question :</label>
            <input type="text" name="HintQue" value="" />
          </div>
          <div>
            <label for="HintAns">Hint Answer :</label>
            <input type="text" name="HintAns" value="" />
          </div>
          <div>
            <label for="Type">Choose a User type :</label>
            <select name="Type" id="cars">
            <option value="Admin">Admin</option>
            <option value="EMmployee">Employee</option>
            </select>
          </div>
          <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
          </div>
        </fieldset>
      </form>
    </body>
</html>
